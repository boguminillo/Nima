<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nima" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dorado_claro</item>
        <item name="colorPrimaryVariant">@color/marron</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gris_dorado</item>
        <item name="colorSecondaryVariant">@color/dorado_oscuro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>